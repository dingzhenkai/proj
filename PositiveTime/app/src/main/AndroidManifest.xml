<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sjtu.se2017.positivetime">

    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/NotitleTheme"
        android:name="com.sjtu.se2017.positivetime.model.ATapplicaion">//this line defines a global application
        <activity
            android:name=".SetWeightActivity"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AppStatisticsList" />
        <activity android:name=".PiePolylineChartActivity" />
        <activity android:name=".BarChartActivity"></activity>
        <activity android:name=".MainActivity"></activity>
        <activity
            android:name=".LockActivity"
            android:launchMode="singleInstance" >
        </activity>

        <service
            android:name=".service.WatchDogService"
            android:process=":watchDog" >
        </service>
    </application>

</manifest>
